# Backend Dockerfile
FROM nexus.ocbc.com:8443/node:18-alpine

WORKDIR /app

# Copy package files and install dependencies
COPY backend/package*.json ./backend/
RUN cd backend && npm ci --only=production --registry=https://nexus.ocbc.com:8443/repository/OCBC_NPM/ --strict-ssl=false

# Copy source code
COPY backend/ ./backend/

WORKDIR /app/backend

# Expose port
EXPOSE 3001

# Start server
CMD ["npm", "start"]

